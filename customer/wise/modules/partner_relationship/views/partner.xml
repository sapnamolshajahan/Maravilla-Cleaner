<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_partner_team_form"  model="ir.ui.view">
		<field name="name">Partner Teams</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook" position="inside">
				<page name="relationships" string="Relationships">
					<field name="relationships" nolabel="1">
						<list editable="bottom">
							<field name="relationship_type"/>
                            <field name="related_partners" widget="many2many_tags"/>
						</list>
					</field>
				</page>
			</xpath>
		</field>
	</record>

    <record id="relationship_type_list" model="ir.ui.view">
        <field name="name">relationship.list.type</field>
        <field name="model">partner.relationship.type</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Types" editable="top">
                <field name="name"/>
                <field name="related_type" />
            </list>
        </field>
    </record>

    <record id="action_relationship_type" model="ir.actions.act_window">
    <field name="name">Relationship Types</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">partner.relationship.type</field>
    <field name="view_mode">list</field>
    <field name="view_id" ref="relationship_type_list"/>
</record>

    <menuitem
    id="menu_relationship_type"
    name="Relationship Types"
    parent="contacts.res_partner_menu_config"
    action="action_relationship_type"
    sequence="10"
/>
</odoo>
