<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

	<record id="team_manager_group" model="res.groups">
		<field name="name">Relationship Manager</field>
	</record>

	<record id="partner_relationship_manager" model="ir.model.access">
		<field name="name">Relationship Manager</field>
		<field name="model_id" ref="model_partner_relationship"/>
		<field name="group_id" ref="team_manager_group"/>
		<field name="perm_read" eval="True" />
		<field name="perm_write" eval="True" />
		<field name="perm_create" eval="True" />
		<field name="perm_unlink" eval="True" />
	</record>
	<record id="partner_team_user" model="ir.model.access">
		<field name="name">Relationship User</field>
		<field name="model_id" ref="model_partner_relationship"/>
		<field name="group_id" ref="base.group_user"/>
		<field name="perm_read" eval="True" />
		<field name="perm_write" eval="False" />
		<field name="perm_create" eval="False" />
		<field name="perm_unlink" eval="False" />
	</record>

	<record id="partner_relationship_type_manager" model="ir.model.access">
	    <field name="name">Relationship Type Manager</field>
	    <field name="model_id" ref="model_partner_relationship_type"/>
		<field name="group_id" ref="team_manager_group"/>
	    <field name="perm_read" eval="True" />
	    <field name="perm_write" eval="True" />
	    <field name="perm_create" eval="True" />
	    <field name="perm_unlink" eval="True" />
	</record>
	<record id="partner_relationship_type_user" model="ir.model.access">
	    <field name="name">Relationship Type User</field>
	    <field name="model_id" ref="model_partner_relationship_type"/>
	    <field name="group_id" ref="base.group_user"/>
	    <field name="perm_read" eval="True" />
	    <field name="perm_write" eval="False" />
	    <field name="perm_create" eval="False" />
	    <field name="perm_unlink" eval="False" />
	</record>
</odoo>
