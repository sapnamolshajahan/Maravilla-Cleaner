<odoo>
    <record id="view_eve_event_import_form" model="ir.ui.view">
        <field name="name">eve.event.import.form</field>
        <field name="model">eve.event.import</field>
        <field name="arch" type="xml">
            <form string="Import Event Data">
                <group>
                    <field name="file" filename="file_name"/>
                </group>
                <footer>
                    <button name="action_process_file"
                            string="Proceed"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
