<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_hold_list" model="ir.ui.view">
        <field name="name">product.hold.list</field>
        <field name="model">product.hold</field>
        <field name="arch" type="xml">
            <list string="Products On Hold">
                <field name="product_id"/>
                <field name="qty"/>
                <field name="customer_id"/>
                <field name="hold_to_date"/>
            </list>
        </field>
    </record>

    <record id="view_product_hold_form" model="ir.ui.view">
        <field name="name">product.hold.form</field>
        <field name="model">product.hold</field>
        <field name="arch" type="xml">
            <form string="Products On Hold">
                <sheet>
                    <group>
                        <field name="product_id" options="{'no_create': True}"/>
                        <field name="qty"/>
                        <field name="customer_id" options="{'no_create': True}"/>
                        <field name="hold_to_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_hold" model="ir.actions.act_window">
        <field name="name">Product Hold</field>
        <field name="res_model">product.hold</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_product_hold_root"
              name="Products On Hold"
              parent="sale.sale_menu_root"
              sequence="99"/>

    <menuitem id="menu_product_hold"
              name="Products On Hold"
              parent="menu_product_hold_root"
              action="action_product_hold"/>
</odoo>
