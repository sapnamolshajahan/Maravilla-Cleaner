<odoo>
    <record id="stock_quant_tree_batch_load" model="ir.ui.view">
        <field name="name">stock.quant.tree.batch.load</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_import_batch_excel"
                        string="Import Batch Load"
                        type="object"
                        class="btn-primary"
                        display="always"/>
            </xpath>
        </field>
    </record>
</odoo>
