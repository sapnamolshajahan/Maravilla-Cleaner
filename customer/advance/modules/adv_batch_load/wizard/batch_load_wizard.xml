<odoo>
    <record id="view_adv_batch_load_wizard" model="ir.ui.view">
        <field name="name">adv.batch.load.wizard.form</field>
        <field name="model">adv.batch.load.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Batch Excel">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename"/>
                </group>
                <footer>
                    <button string="Import"
                            type="object"
                            name="action_import"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
