<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_email_doc_tree" model="ir.ui.view">
		<field name="name">Email Documents Tree</field>
		<field name="model">email.doc.type</field>
		<field name="arch" type="xml">
			<list editable="bottom">
				<field name="name"/>
				<field name="model_name"/>
				<field name="template"  options="{'no_create': True}"/>
				<field name="enabled"/>
			</list>
		</field>
	</record>

	<record id="action_email_doc_view" model="ir.actions.act_window">
		<field name="name">Email Document Types</field>
		<field name="res_model">email.doc.type</field>
		<field name="view_mode">list</field>
	</record>

	<menuitem id="menu_email_doc"
			  action="action_email_doc_view"
			  parent="base.menu_email"/>
</odoo>
