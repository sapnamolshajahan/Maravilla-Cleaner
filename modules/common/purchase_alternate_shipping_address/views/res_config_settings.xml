<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_purchase_order_address" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.order.address</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='purchase']" position="inside">
                <block title="Purchase Order Address" name="purchase_order_address">
                    <setting id="po_emailing_container">
                        <field name="show_hide_alt_po_address"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
