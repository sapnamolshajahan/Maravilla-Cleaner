<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="gss_warehouse_box_form_view" model="ir.ui.view">
		<field name="name">GSS Warehouse Box</field>
		<field name="model">stock.warehouse.box</field>
		<field name="mode">primary</field>
		<field name="inherit_id" ref="operations_courier_integration.warehouse_box_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='type']" position="after">
                <field name="package_code" options="{'no_create_edit': True}" />
            </xpath>
		</field>
	</record>

	<record id="gss_warehouse_box_tree_view" model="ir.ui.view">
		<field name="name">GSS Warehouse Box</field>
		<field name="model">stock.warehouse.box</field>
		<field name="inherit_id" ref="operations_courier_integration.warehouse_box_tree_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='type']" position="after">
                <field name="package_code" />
            </xpath>
		</field>
	</record>
</odoo>
