<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="deployment_info_agent_cron" model="ir.cron">
        <field name="name">Deployment Info Agent</field>
        <field name="model_id" ref="model_deployment_info_agent"/>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="state">code</field>
        <field name="code">model.send_info()</field>
    </record>

    <function model="deployment.info.agent" name="schedule_send_info"/>
</odoo>
