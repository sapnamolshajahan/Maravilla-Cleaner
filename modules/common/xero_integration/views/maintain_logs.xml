<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="menu_xero_log" name="Xero Log" sequence="100" parent="account.menu_finance_reports" />

    <record id="view_account_payment_log_form" model="ir.ui.view">
        <field name="name">xero.error.log.form</field>
        <field name="model">xero.error.log</field>
        <field name="arch" type="xml">
            <form string="Xero Error Logs">
                <sheet>
                <group>
                    <group>
                        <field name="transaction"/>
                        <field name="state"/>
                        <field name="date"/>
                        <field name="record_id"/>
                        <field name="record_name"/>
                    </group>

                    <group>
                        <field name="xero_error_msg" invisible="state != 'error'"/>
                        <field name="xero_error_response" invisible="state != 'error'"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_xero_error_log_tree" model="ir.ui.view">
        <field name="name">xero.error.log.tree</field>
        <field name="model">xero.error.log</field>
        <field name="arch" type="xml">
            <list string="Xero Error Logs">
                <field name="transaction"/>
                <field name="date"/>
                <field name="record_name"/>
                <field name="record_id"/>
                <field name="xero_error_msg"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_xero_error_log_form" model="ir.actions.act_window">
        <field name="name">Xero Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">xero.error.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

	<menuitem action="action_xero_error_log_form" id="menu_action_xero_error_logs_form_invoice" parent="menu_xero_log"/>
</odoo>
