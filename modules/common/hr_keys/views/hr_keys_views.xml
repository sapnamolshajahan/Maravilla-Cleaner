<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_keys_tree_view" model="ir.ui.view">
            <field name="name">hr.keys.view</field>
            <field name="model">hr.key</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Keys" editable="top">
                    <field name="name" options="{'no_create': True}"/>
                    <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="date_allocated"/>
                    <field name="company_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="status_id"/>
                    <field name="date_from"/>
                    <field name="date_expiry"/>
                    <field name="is_expired"/>
                    <field name="notes"/>
                </list>
            </field>
        </record>

        <!-- Window Action -->
        <record id="action_hr_keys" model="ir.actions.act_window">
            <field name="name">Keys</field>
            <field name="res_model">hr.key</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="hr_keys_tree_view"/>
        </record>


        <!-- Menu Action -->

        <menuitem id="menu_hr_key_root" name="Keys" parent="hr.menu_hr_root"
                  sequence="6"/>

        <menuitem id="menu_hr_key_config_root" name="Key Configuration" parent="menu_hr_key_root"
                  sequence="20"/>


        <menuitem action="action_hr_keys"
                  id="menu_hr_keys"
                  parent="menu_hr_key_root"
                  sequence="1"/>
    </data>
</odoo>