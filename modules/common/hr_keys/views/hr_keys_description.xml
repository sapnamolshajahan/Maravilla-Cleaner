<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="hr_keys_description_view" model="ir.ui.view">
            <field name="name">hr.keys.description.view</field>
            <field name="model">hr.key.description</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Tools" editable="top">
                    <field name="name"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Window Action -->
        <record id="action_hr_keys_description" model="ir.actions.act_window">
            <field name="name">Keys Descriptions</field>
            <field name="res_model">hr.key.description</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="hr_keys_description_view"/>
        </record>

        <!-- Menu Action -->
        <menuitem action="action_hr_keys_description"
                  id="menu_hr_key_description"
                  parent="hr_keys.menu_hr_key_config_root"
                  sequence="10"/>
    </data>
</odoo>
