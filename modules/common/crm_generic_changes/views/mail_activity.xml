<?xml version="1.0"?>
<odoo>
	<record id="mail_activity_crm_popup_filter_extension" model="ir.ui.view">
		<field name="name">cmail.activity.crm.popup.filter.extension</field>
		<field name="model">mail.activity</field>
		<field name="inherit_id" ref="mail.mail_activity_view_search"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='activity_type_id']" position="after">
				<field name="partner_id"/>
			</xpath>
		</field>
	</record>

	<record id="mail_activity_action" model="ir.actions.act_window">
		<field name="name">All Activity</field>
		<field name="res_model">mail.activity</field>
		<field name="search_view_id" ref="mail.mail_activity_view_search"/>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="mail_activity_action_form" model="ir.actions.act_window">
		<field name="name">Log Activity</field>
		<field name="res_model">mail.activity</field>
		<field name="view_id" ref="mail.mail_activity_view_form_popup"/>
		<field name="view_mode">form</field>
	</record>

	<record id="mail_activity_crm_popup_extension" model="ir.ui.view">
		<field name="name">cmail.activity.crm.popup.extension</field>
		<field name="model">mail.activity</field>
		<field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='summary']" position="after">
				<field name="priority"/>
			</xpath>
			<xpath expr="//field[@name='user_id']" position="after">
				<field name="create_uid"/>
			</xpath>
		</field>
	</record>

	<record id="mail_activity_tree" model="ir.ui.view">
		<field name="name">Mail Activity Additional Fields</field>
		<field name="model">mail.activity</field>
		<field name="inherit_id" ref="mail.mail_activity_view_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='summary']" position="after">
				<field name="date"/>
				<field name="priority"/>
				<field name="res_model_id"/>
				<field name="create_uid"/>
				<field name="user_id"/>
				<field name="date_done"/>
				<field name="state"/>
			</xpath>
		</field>
	</record>

	<menuitem id="crm.activity"
		name="All Activity"
		sequence="10"
		parent="crm.crm_menu_report"
		action="mail_activity_action"/>
</odoo>
