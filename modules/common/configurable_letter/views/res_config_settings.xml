<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_configurable_letter" model="ir.ui.view">
            <field name="name">res.config.settings.view.configurable.letter</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='users_setting_container']" position="inside">
                    <setting name="configurable_letter_footer_text"
                             help="Default footer for configurable letters">
                        <field name="configurable_letter_footer_text"/>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>