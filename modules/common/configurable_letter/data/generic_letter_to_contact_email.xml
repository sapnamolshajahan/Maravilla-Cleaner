<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="registry_generic_letter_to_contact_email" model="mail.template">
            <field name="name">Generic letter to contact email</field>
            <field name="auto_delete" eval="False"/>
            <field name="subject">{{object.env.user.company_id.name}} - {{object.reference}}</field>
            <field name="model_id" ref="model_letter_template_report_wizard"/>
            <field name="report_template_ids" eval="[(4, ref('letter_to_contact_generic_report_viaduct'))]"/>
            <field name="lang">{{object.partner_id.lang}}</field>
            <field name="body_html" type="html">
                <div>Hello,
                    <t t-out="object.partner_id.name"/>
                </div>
                <div/>
                <div>
                    <t t-out="object.env.user.signature"/>
                </div>
            </field>
        </record>
    </data>
</odoo>
