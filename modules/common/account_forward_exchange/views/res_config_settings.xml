<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_fec" model="ir.ui.view">
        <field name="name">res.config.settings.fec</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="35"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='bank_cash']" position="after">
                <h2>Forward Exchange Contract Options</h2>
                <div class="row mt16 o_settings_container" name="fdc_container">
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">FEC Mode</span>
                            <div class="text-muted">
                                Determines which model (PO or Invoice) the FEC details are set up on
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="fec_mode" class="col-lg-3 o_light_label"/>
                                    <field name="fec_mode"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
