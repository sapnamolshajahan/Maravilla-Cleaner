<?xml version="1.0" ?>
<odoo>
    <record id="view_sale_move_pivot" model="ir.ui.view">
        <field name="name">sale.move.pivot</field>
        <field name="model">sale.move.report</field>
        <field name="arch" type="xml">
            <pivot string="Sale Moves Analysis" disable_linking="True">
                <field name="warehouse_id" type="col"/>
                <field name="product_id" type="row"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_sale_move_graph" model="ir.ui.view">
        <field name="name">sale.move.graph</field>
        <field name="model">sale.move.report</field>
        <field name="arch" type="xml">
            <graph string="Sale Move Analysis">
                <field name="warehouse_id" type="row"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_sale_move_tree" model="ir.ui.view">
        <field name="name">sale.move.tree</field>
        <field name="model">sale.move.report</field>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <list string="Sale Moves">
                <field name="product_id" options="{'no_create':True}"/>
                <field name="warehouse_id" options="{'no_create':True}"/>
                <field name="company_id" options="{'no_create':True}"/>
                <field name="date"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>

    <record id="action_sale_move_report_window" model="ir.actions.act_window">
        <field name="name">Sale Moves Report</field>
        <field name="res_model">sale.move.report</field>
        <field name="view_mode">pivot,graph,list</field>
    </record>

    <menuitem name="Sale Moves Report"
              action="action_sale_move_report_window"
              parent="stock.menu_warehouse_report" id="action_sale_move_report_data"
              groups="base.group_user"
              sequence="60"/>
</odoo>
