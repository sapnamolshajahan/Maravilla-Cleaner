<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_mail_subscribe" model="ir.ui.view">
            <field name="name">res.config.settings.view.mail_subscribe</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='users_setting_container']" position="inside">
                    <setting name="exclude_internal"
                             help="For messages sent from a record, do not advise internal followers.">
                        <field name="exclude_internal" widget="boolean_toggle"/>
                    </setting>
                    <setting name="exclude_external"
                             help="For messages sent from a record, do not advise external followers.">
                        <field name="exclude_external" widget="boolean_toggle"/>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>