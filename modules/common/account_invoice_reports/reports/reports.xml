<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Deactivate basic-common report -->
    <record id="account_basic_invoice_reports.basic_invoice_viaduct" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

    <record id="standard_invoice_viaduct" model="ir.actions.report">
        <field name="name">Invoice/Credit Note</field>
         <field name="report_name">account_invoice_reports.standard_invoice_viaduct</field>
        <field name="viaduct_helper">
            odoo.addons.account_invoice_reports.reports.invoice_helper.StandardInvoiceHelper
        </field>
        <field name="report_file">account_invoice_reports/reports/invoice-unpack.jrxml</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="print_report_name">object.get_printed_report_name()</field>
    </record>

    <record id="standard_journal_viaduct" model="ir.actions.report">
        <field name="name">Journal Print</field>
        <field name="report_name">account_invoice_reports.standard_journal_viaduct</field>
        <field name="viaduct_helper">
            odoo.addons.account_invoice_reports.reports.journal_helper.JournalHelper
        </field>
        <field name="report_file">account_invoice_reports/reports/journal-unpack.jrxml</field>
        <field name="model">account.move</field>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="print_report_name">'Journal-{}'.format(object.name).replace('/', '-')</field>
    </record>
</odoo>
