<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="edi_confirmation_not_received_template" model="mail.template">
            <field name="name">EDI Confirmation not received notification</field>
            <field name="subject">EDI Confirmation for invoice {{ object.name }} was not received</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="auto_delete" eval="False"/>
            <field name="email_to">{{ ctx.get('email_to', False) }}</field>
            <field name="body_html" type="html">
                <p>
                    The Control Document for the invoice <t t-out="object.name"/> has not been received within
                    <t t-out="ctx.get('period')"/> hours of the EDI document being sent.
                </p>
            </field>
        </record>
    </data>
</odoo>