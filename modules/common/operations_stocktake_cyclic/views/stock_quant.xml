<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_quant_view" model="ir.ui.view">
        <field name="name">stock_quant_view</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_apply_inventory']" position="replace">
                <button name="action_apply_inventory" groups="operations_stocktake_cyclic.group_inventory_manager"
                        type="object" string="Apply" class="btn btn-link" icon="fa-save"
                        invisible="not inventory_quantity_set"
                />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="cyclic"/>
            </xpath>
        </field>
    </record>
</odoo>