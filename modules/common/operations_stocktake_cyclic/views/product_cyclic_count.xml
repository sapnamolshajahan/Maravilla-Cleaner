<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_cyclic_count_tree_view" model="ir.ui.view">
            <field name="name">product_cyclic_count_tree</field>
            <field name="model">product.cyclic.count</field>
            <field name="arch" type="xml">
                <list string="Product Cyclic Count" editable="top">
                    <field name="name"/>
                    <field name="frequency"/>
                    <field name="time_measure"/>
                    <field name="last_count_date"/>
                    <field name="next_count_date"/>
                </list>
            </field>
        </record>
        <record id="action_product_cyclic_count" model="ir.actions.act_window">
            <field name="name">Product Cyclic Count</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.cyclic.count</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="product_cyclic_count_tree_view"/>
        </record>
        <menuitem id="menu_product_cyclic_count" name="Product Cyclic Count" parent="stock.menu_product_in_config_stock"
                  action="action_product_cyclic_count"/>
    </data>
</odoo>