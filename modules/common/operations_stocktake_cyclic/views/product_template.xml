<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cyclic_count_product_form" model="ir.ui.view">
            <field name="name">Cyclic Count</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='responsible_id']" position="after">
                    <field name="cyclic_count_frequency"/>
                </xpath>
            </field>
        </record>

        <record id="cyclic_count_warehouse_form" model="ir.ui.view">
            <field name="name">cyclic.count.warehouse.form</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="incl_cyclic"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>