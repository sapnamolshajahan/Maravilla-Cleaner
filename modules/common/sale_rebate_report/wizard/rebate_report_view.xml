<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rebate_report_view" model="ir.ui.view">
        <field name="name">Rebate Report</field>
        <field name="model">rebate.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <field name="partner_id" domain="[('customer_rank', '>', 0), ('is_company', '=', True)]"
                           options="{'no_quick_create': True, 'no_create_edit': True}"/>
                </group>
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer colspan="2">
                    <button name="check_report" class="oe_highlight" string="Print" type="object" colspan="2"
                            default_focus="1"/>
                    <button special="cancel" class="oe_link" string="Cancel" colspan="2"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rebate_report_view" model="ir.actions.act_window">
        <field name="name">Rebate Report</field>
        <field name="res_model">rebate.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="rebate_report_view"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="group_ids" eval="[(4, ref('account.group_account_manager','account.group_account_user'))]"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_rebate_report"
              name="Rebate Report"
              groups="account.group_account_manager,account.group_account_user"
              parent="sale.menu_sale_report"
              action="action_rebate_report_view"/>

</odoo>