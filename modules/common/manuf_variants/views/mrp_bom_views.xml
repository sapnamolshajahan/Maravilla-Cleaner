<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.view</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="invisible">is_intermediate</attribute>
            </xpath>

            <xpath expr="//field[@name='product_id']" position="after">
                <field name="is_intermediate" invisible="1"/>
                <field name="fp_bom_id" invisible="not is_intermediate" required="is_intermediate"/>
            </xpath>
        </field>
    </record>
</odoo>

