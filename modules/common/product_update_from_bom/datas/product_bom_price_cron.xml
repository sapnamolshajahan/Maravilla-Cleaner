<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="product_bom_price_cron" model="ir.cron">
            <field name="name">Product BOM Price Cron</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="state">code</field>
            <field name="nextcall"
                   eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 23:59:59')"/>
            <field name="code">model._cron_product_bom_price()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
