<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_sleep_time" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mail</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='email-outlook-setting']" position="after">
                    <setting id="sleep-time-setting" string="Sleep Time"
                             help="if this is set to zero, do not do any sleeps.">
                        <field name="sleep_time" placeholder="e.g. 0.01"/>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>