<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="stock_quant_picking_tree">
        <field name="name">stock.quant.picking.tree</field>
        <field name="model">stock.quant</field>
        <field eval="20" name="priority"/>
        <field name="arch" type="xml">
            <list editable="top" create="0" edit="0" delete="0" import="0">
                <field name="lot_id"/>
                <field name="quantity" string="On Hand Quantity"/>
                <field name="reserved_quantity"/>
                <field name="avail_qty"/>
                <field name="product_uom_id" groups="uom.group_uom"/>
                <field name="company_id" invisible="1"/>
                <field name="product_id" invisible="1"/>
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_quantity_move_list_view">
        <field name="name">Quant Data</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="operations_lots_views.stock_quant_picking_tree"/>
    </record>

    <record id="picking_form_with_lots" model="ir.ui.view">
        <field name="name">Picking with Lots</field>
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_ids']" position="after">
                <button name="action_show_lot_quantities" string="Show available lot quantities" type="object"
                        icon="fa-crosshairs" width="0.1"
                        invisible="show_details_visible == False"
                />
            </xpath>
        </field>
    </record>
</odoo>
