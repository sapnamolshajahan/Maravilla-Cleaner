<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_health_safety_policy_list" model="ir.ui.view">
        <field name="name">hr.health.safety.policy.list</field>
        <field name="model">hr.health.safety.policy</field>
        <field name="arch" type="xml">
            <list string="Health &amp; Safety Policies">
                <field name="sequence" readonly="1"/>
                <field name="name"/>
                <field name="start_date"/>
                <field name="notification_date"/>
                <field name="end_date"/>
                <field name="responsible_manager_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_hr_health_safety_policy_form" model="ir.ui.view">
        <field name="name">hr.health.safety.policy.form</field>
        <field name="model">hr.health.safety.policy</field>
        <field name="arch" type="xml">
            <form string="Health &amp; Safety Policies">
                <sheet>
                    <group>
                        <group>
                            <field name="sequence" readonly="1"/>
                            <field name="name"/>
                            <field name="responsible_manager_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="notification_date"/>
                            <field name="end_date"/>
                            <field name="status" readonly="1"/>
                            <field name="policy_document"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_health_safety_policy" model="ir.actions.act_window">
        <field name="name">Health &amp; Safety Policies</field>
        <field name="res_model">hr.health.safety.policy</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_hr_health_safety_root"
              name="Health &amp; Safety Policy"
              parent="hr_hazard.menu_hr_health_and_safety"
              sequence="95"/>

    <menuitem id="menu_hr_health_safety_policy"
              name="Health &amp; Safety Policy"
              parent="menu_hr_health_safety_root"
              action="action_hr_health_safety_policy"/>

</odoo>
