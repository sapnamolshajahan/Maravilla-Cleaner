<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="mail_template_health_policy_notification" model="mail.template">
            <field name="name">Health &amp; Safety Policy Notification</field>
            <field name="model_id" ref="model_hr_health_safety_policy"/>
            <field name="subject">Policy Notification: ${object.name}</field>
            <field name="email_from">${(object.responsible_manager_id.company_id.email or 'info@company.com')|safe}</field>
            <field name="email_to">${object.responsible_manager_id.email|safe}</field>
            <field name="body_html" type="html">
                <p>Dear ${object.responsible_manager_id.name},</p>
                <p>This is a reminder that the policy <b>${object.name}</b> has reached its notification date (${object.notification_date}).</p>
                <p><b>Policy End Date:</b> ${object.end_date}</p>
                <p>Please review the policy status and take appropriate actions.</p>
                <p>Thank you<br/></p>
            </field>
        </record>

    </data>
</odoo>
