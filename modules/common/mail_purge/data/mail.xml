<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="config_mail_purge" model="ir.config_parameter">
            <field name="key">mail_purge.purge_days</field>
            <field name="value">1</field>
        </record>

        <!-- Mail Purge Scheduled Task. -->
        <record id="cron_mail_purge" forcecreate="True" model="ir.cron">
            <field name="name">Mail Purge</field>
            <field name="model_id" ref="model_mail_mail"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="state">code</field>
            <field name="code">model.do_mail_purge()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>

    </data>
</odoo>
