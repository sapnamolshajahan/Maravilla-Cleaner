<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Deactivate base reports -->
    <record id="purchase.action_report_purchase_order" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>
    <record id="purchase.report_purchase_quotation" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

    <record id="generic_purchase_viaduct" model="ir.actions.report">
        <field name="name">Purchase Order</field>
        <field name="viaduct_helper">
            odoo.addons.purchase_order_reports.reports.purchase_order_helper.PurchaseOrderHelper
        </field>
        <field name="report_name">purchase_order_reports.generic_purchase_viaduct</field>
        <field name="report_file">purchase_order_reports/reports/purchase-order-unpack.jrxml</field>
        <field name="model">purchase.order</field>
        <field name="binding_model_id" ref="model_purchase_order"/>
        <field name="print_report_name">'Purchase Order {}'.format(object.name).replace('/', '-')</field>
    </record>
</odoo>
