<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--    Deactivate base reports while sending email-->
        <record id="purchase.email_template_edi_purchase_done" model="mail.template">
            <field name="report_template_ids"
                   eval="[(6, 0, [ref('purchase_order_reports.generic_purchase_viaduct')])]"/>
        </record>
        <record id="purchase.email_template_edi_purchase" model="mail.template">
            <field name="report_template_ids"
                   eval="[(6, 0, [ref('purchase_order_reports.generic_purchase_viaduct')])]"/>
        </record>
    </data>
</odoo>