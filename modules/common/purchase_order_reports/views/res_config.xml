<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_purchase_reports_form" model="ir.ui.view">
        <field name="name">res.config.settings.purchase.report</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='matrix_setting_container']" position="after">
            <div class="row mt16 o_settings_container" name="purchase_generic_container_2">
                <h2>Purchase Report Options</h2>
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Purchase Incoterm</span>
                            <div class="text-muted">
                                Default Pricing for Supplier Purchase Order reports
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="purchase_report_email_review" class="col-lg-3 o_light_label"/>
                                    <field name="purchase_report_email_review"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
