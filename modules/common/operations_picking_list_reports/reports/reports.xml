<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Deactivate the base (q-web) version -->
    <record id="stock.action_report_picking" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>
    <record id="stock.action_report_delivery" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

    <record id="standard_picking_viaduct" model="ir.actions.report">
        <field name="name">Picking List</field>
        <field name="report_name">operations_picking_list_reports.standard_picking_viaduct</field>
        <field name="viaduct_helper">
            odoo.addons.operations_picking_list_reports.reports.picking_helper.PickingHelper
        </field>
        <field name="report_file">operations_picking_list_reports/reports/picking-list-unpack.jrxml</field>
        <field name="model">stock.picking</field>
        <field name="binding_model_id" ref="model_stock_picking"/>
        <field name="print_report_name">'Picking-{}'.format(object.name).replace('/', '-')</field>
    </record>
</odoo>
