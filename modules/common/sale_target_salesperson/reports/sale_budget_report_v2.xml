<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sales_budget_report_sv2" model="ir.actions.act_window">
        <field name="name">Invoiced Sales to Forecast Report</field>
        <field name="res_model">sales.report.budget</field>
        <field name="view_mode">list,form,pivot</field>
    </record>

    <record id="sales_budget_report_sv2_pivot" model="ir.ui.view">
        <field name="name">sales.budget.report.pivot</field>
        <field name="model">sales.report.budget</field>
        <field name="arch" type="xml">
            <pivot string="Sale Budget Reports" sample="1">
                <field name="salesperson" type="col"/>
                <field name="team" type="col"/>
                <field name="period_end_date" type="row"/>
                <field name="budget" type="measure"/>
                <field name="invoiced" type="measure"/>
                <field name="opportunities" type="measure"/>
            </pivot>
        </field>
    </record>


    <record id="sales_budget_report_sv2_tree" model="ir.ui.view">
        <field name="name">sales.budget.reports.tree</field>
        <field name="model">sales.report.budget</field>
        <field name="arch" type="xml">
            <list string="Sale Budget Reports" create="false">
                <field name="salesperson" widget="many2one_avatar_user"/>
                <field name="team"/>
                <field name="opportunities" decoration-bf="1"/>
                <field name="quotes" decoration-bf="1"/>
                <field name="sale_orders" decoration-bf="1"/>
                <field name="invoiced" decoration-bf="1"/>
                <field name='budget' optional="show"/>
                <field name='actual' optional="show"/>
                <field name='period_end_date'/>
            </list>
        </field>
    </record>


    <menuitem id="sales_report_budget_menu"
              name="Sales Forecast Report"
              action="action_sales_budget_report_sv2"
              parent="sale.menu_sale_report"
              sequence="20"/>

</odoo>