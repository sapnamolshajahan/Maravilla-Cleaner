<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_work_contact_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.work.contact.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']//group[@name='settings_group']//group[@name='user']//div" position="after">
                <field name="work_contact_id" readonly="1" string="Vendor" options="{'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
