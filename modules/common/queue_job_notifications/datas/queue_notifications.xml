<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="job_queue_update_done" model="mail.template">
            <field name="name">Job Queue Update Done</field>
            <field name="model_id" ref="queue_job.model_queue_job"/>
            <field name="subject">Update on Job Queue</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="model_id" ref="queue_job.model_queue_job"/>
            <field name="subject">Update on Job Queue</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="email_to">{{ object.user_id.partner_id.email or object.user_id.email_formatted }}</field>
            <field name="lang">{{ object.user_id.partner_id.lang }}</field>
            <field name="description">Update on Job Queue</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Hello<t t-out="object.user_id.partner_id.name or ''"/>,
                        <br/>
                        <br/>
                        Job Queue with reference
                        <t t-out="object.name or ''"/>
                        has been Completed.
                        <a t-attf-href="/get/job/link/{{ object.id }}">Click to redirect to the job.</a>
                    </p>
                    <br/>
                    Thank you
                </div>
            </field>
            <field name="lang">{{ object.user_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
        </record>

        <record id="job_queue_update_failed" model="mail.template">
            <field name="name">Job Queue Update Failed</field>
            <field name="model_id" ref="queue_job.model_queue_job"/>
            <field name="subject">Update on Job Queue</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="email_to">{{ object.user_id.partner_id.email or object.user_id.email_formatted }}</field>
            <field name="lang">{{ object.user_id.partner_id.lang }}</field>
            <field name="description">Update on Job Queue</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Hello<t t-out="object.user_id.partner_id.name or ''"/>,
                        <br/>
                        <br/>
                        Job Queue with reference
                        <t t-out="object.name or ''"/>
                        has been Failed.
                        <a t-attf-href="/get/job/link/{{ object.id }}">Click to redirect to the job.</a>
                    </p>
                    <br/>
                    Thank you
                </div>
            </field>
            <field name="lang">{{ object.user_id.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>