<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="payment_provider_on_account" model="payment.provider">
        <field name="code">custom</field>
        <field name="custom_mode">on_account</field>
        <field name="state">enabled</field>
        <field name="is_published">True</field>
        <field name="module_state">installed</field>
        <field name="name">On Account</field>
        <field name="redirect_form_view_id" ref="payment_custom.redirect_form"/>
        <field name="pending_msg" type="html">
            <p>The order has been received.</p>
        </field>
        <field name="done_msg" type="html">
            <p>The order has been received.</p>
        </field>
    </record>

    <record id="payment_method_on_account" model="payment.method">
        <field name="name">On account</field>
        <field name="code">on_account</field>
        <field name="sequence">1000</field>
        <field name="active">True</field>
        <field name="image" type="base64" file="website_sale_on_account/static/description/icon.svg"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">none</field>
        <field name="provider_ids" eval="[(6, 0, [ref('payment_provider_on_account')])]"/>
    </record>


</odoo>