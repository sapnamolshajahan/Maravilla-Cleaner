<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Define "light" and "heavy" job channels
      -->
    <record id="light_job_channel" model="queue.job.channel">
        <field name="name">light</field>
        <field name="parent_id" ref="queue_job.channel_root"/>
        <field name="removal_interval">30</field>
    </record>
    <record id="heavy_job_channel" model="queue.job.channel">
        <field name="name">heavy</field>
        <field name="parent_id" ref="queue_job.channel_root"/>
        <field name="removal_interval">30</field>
    </record>
</odoo>
