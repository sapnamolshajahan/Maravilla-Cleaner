        <field name="inherit_id" ref="base_generic_changes.view_company_base_inherit_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <page name="company_parameters" position="inside">
                <group col="2" colspan="2" string = "Demand Planning">
                    <field name="purchase_demand_cover" />
                    <field name="history_count" />
