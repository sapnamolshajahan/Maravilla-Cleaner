<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_add_api_post_name_wizard_form">
        <field name="name">add.api.post.ref.wizard.form</field>
        <field name="model">add.api.post.ref.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Add POST Name">
                <group>
                    <field name="new_post_label"/>
                </group>
                <footer>
                    <div>
                        <button name="button_add_post_name"
                                string="Save" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </div>
                </footer>
            </form>
        </field>
    </record>
</odoo>