<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_induction_questions_form" model="ir.ui.view">
        <field name="name">induction.questions.form</field>
        <field name="model">induction.questions</field>
        <field name="arch" type="xml">
            <form string="Induction Question">
                <sheet>
                    <group>
                        <field name="induction_statement"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_induction_questions_list" model="ir.ui.view">
        <field name="name">induction.questions.list</field>
        <field name="model">induction.questions</field>
        <field name="arch" type="xml">
            <list string="Induction Questions">
                <field name="induction_statement"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="action_induction_questions" model="ir.actions.act_window">
        <field name="name">Induction Questions</field>
        <field name="res_model">induction.questions</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_induction_root"
              name="Contractor"
              parent="hr_hazard.menu_hr_health_and_safety"
              sequence="98"/>

    <menuitem id="menu_induction_questions"
              name="Induction Questions"
              parent="menu_induction_root"
              action="action_induction_questions"/>
</odoo>
