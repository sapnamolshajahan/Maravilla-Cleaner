<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_visitor_type_list" model="ir.ui.view">
        <field name="name">visitor.type.list</field>
        <field name="model">visitor.type</field>
        <field name="arch" type="xml">
            <list string="Visitor Types">
                <field name="name"/>
                <field name="induction_question_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_visitor_type_form" model="ir.ui.view">
        <field name="name">visitor.type.form</field>
        <field name="model">visitor.type</field>
        <field name="arch" type="xml">
            <form string="Visitor Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="induction_question_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_visitor_type" model="ir.actions.act_window">
        <field name="name">Visitor Types</field>
        <field name="res_model">visitor.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_visitor_type"
              name="Visitor Types"
              parent="menu_induction_root"
              action="action_visitor_type"/>

</odoo>
