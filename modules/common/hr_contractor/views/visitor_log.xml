<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_visitor_log_list" model="ir.ui.view">
        <field name="name">visitor.log.list</field>
        <field name="model">visitor.log</field>
        <field name="arch" type="xml">
            <list string="Visitor Logs">
                <field name="name"/>
                <field name="company_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="visitor_type_id"/>
                <field name="staff_member_id"/>
            </list>
        </field>
    </record>

    <record id="view_visitor_log_form" model="ir.ui.view">
        <field name="name">visitor.log.form</field>
        <field name="model">visitor.log</field>
        <field name="arch" type="xml">
            <form string="Visitor Log">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="visitor_type_id"/>
                            <field name="staff_member_id"/>
                            <field name="induction_question_file" filename="induction_filename"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_visitor_log" model="ir.actions.act_window">
        <field name="name">Visitor Logs</field>
        <field name="res_model">visitor.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_visitor_log"
              name="Visitor Logs"
              parent="menu_induction_root"
              action="action_visitor_log"/>
</odoo>
