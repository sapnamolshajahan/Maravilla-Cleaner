<odoo>
    <data>

        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">res.partner.product.property.form.inherit</field>
            <field name="model">res.partner</field>
             <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='container_row_2']/group/field[@name='user_id']" position="after">
                     <field name="is_eligible_for_rebates" />
                </xpath>
            </field>
        </record>

		<record id="sale_order_form_rebate" model="ir.ui.view">
			<field name="name">sale_order_form_rebate</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="type">form</field>
      		<field name="arch" type="xml">
				<xpath expr="//field[@name='company_id']" position="before">
					<field name="has_rebate" />
				</xpath>
	    	</field>
		</record>
		
    </data>
</odoo>