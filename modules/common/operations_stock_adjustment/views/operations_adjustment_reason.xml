        <field name="name">Operations Adjustment Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">operations.adjustment.reason</field>
        <field name="view_id" ref="operations_adjustment_reason_tree"/>
    </record>

    <menuitem action="action_operations_adjustment_reason"
              id="menu_operations_adjustment_reason"
              name="Adjustment Reason"
              parent="stock.menu_warehouse_config"/>
    </data>
