<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="type">form</field>
        <field name="priority" eval="1000"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='stock']" position="inside">
                <block title="Inventory Adjustment" name="request_vendor_setting_container">
                <div class="row mt16 o_settings_container" name="inventory_adjustment_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="approver_settings">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Approver of inventory adjustment are set here.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <span class="o_form_label">Adjustment Approver</span>
                                    <field name="adjustment_approver"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>