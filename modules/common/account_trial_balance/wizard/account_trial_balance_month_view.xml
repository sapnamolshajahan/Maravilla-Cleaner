<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_trial_balance_month_wizard">
            <field name="name">account.trial.balance.month.report.wizard.view</field>
            <field name="model">account.trial.balance.month.export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Monthly Trial Balance">
                    <group>
                        <field name="from_date"/>
                        <field name="as_at_date"/>
                    </group>
                    <separator string="" colspan="4"/>
                    <group colspan="4">
                        <field name="report_name" invisible="1"/>
                        <field name="data" filename="report_name"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button name="button_process" string="Create File" type="object" default_focus="1"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_trial_balance_month_wizard" model="ir.actions.act_window">
            <field name="name">Multi-month Report</field>
            <field name="res_model">account.trial.balance.month.export</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_trial_balance_month_wizard"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem
                name="Multi-month Report"
                action="action_account_trial_balance_month_wizard"
                id="menu_account_trial_balance_month_wizard"
                parent="account_generic_changes.account_reports_gl_menu"
                sequence="12"/>
    </data>
</odoo>

