<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="web_loaylty_info_summery_popup" name="Web Loyalty popup">
            <t t-if="website.user_id != user_id">

                <tr t-if="website.allow_to_loyalty">
                    <td colspan="3" class="text-center text-xl-right border-0">
                        <t t-set="partner_loyalty"
                           t-value="website.sudo().get_loyalty_balance(website_sale_order)"/>
                        <div class="coupon_info" style="font-size: 16px; color: #077bfe; font-weight: 700;"
                             t-att-data-id='website_sale_order.id'>
                            <t t-if="partner_loyalty[0] > 0">
                                <span>+
                                    <t t-out="partner_loyalty[0]"/>
                                </span>
                            </t>
                            <span>Loyalty Point(s) Total :
                                <t t-out="partner_loyalty[1]"/>
                            </span>
                        </div>
                        <t t-if="partner_loyalty[2]">
                            <button type="button" t-att-data-id='website_sale_order.id'
                                    class="open-redeem btn btn-primary btn-lg" data-bs-toggle="modal"
                                    data-bs-target="#redeem_modal" style="padding: 5px;font-size: 16px;float:right">
                                Redeem
                            </button>
                        </t>

                        <!-- Modal -->
                        <div id="redeem_modal" class="modal fade" role="dialog">
                            <div class="modal-dialog" style="padding-top: 40px;position: relative;top: 35px;">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title text-center" style="margin: auto;color:#077bfe;">
                                            Loyalty Redemption
                                        </h4>
                                        <a href="#" class="close" data-bs-dismiss="modal"
                                           style="margin-left: 0px;color: red;">X
                                        </a>
                                    </div>
                                    <div class="modal-body">
                                        <div style="color: #077bfe;text-align: center;font-size: 20px;">
                                            <p style="margin: 2px;">Hello
                                                <span style="margin: 0px 6px;" class="redeem_name"/>
                                            </p>
                                            <p style="margin: 2px;">Your Loyalty Points:<span
                                                    style="margin: 0px 6px;" class="redeem_points"/>Point(s)
                                            </p>
                                            <p style="margin: 2px;">Your Loyalty Balance:
                                                <span t-esc="website.currency_id.symbol"/>
                                                <span style="margin: 0px 6px;" class="redeem_total"/>
                                            </p>
                                            <span style="display: none;" class="redeem_value"></span>
                                            <span style="display: none;" class="order_id"></span>
                                            <span style="display: none;" class="amount_total"></span>
                                            <span style="display: none;" class="order_redeem_points"></span>
                                        </div>
                                        <p style="color: #077bfe;text-align: center;">Enter number of points to
                                            Redeem:
                                        </p>
                                        <div style="display: grid;">
                                            <input id="entered_points" type="number"
                                                   placeholder="Enter points to redeem"
                                                   class="form-control input-field" name="code"
                                                   onkeydown="if(event.key==='.'){event.preventDefault();}"
                                                   onpaste="let pasteData = event.clipboardData.getData('text'); if(pasteData){pasteData.replace(/[^0-9]*/g,'');} "/>
                                            <button type="button" class="redeem_ok btn btn-primary"
                                                    style="margin-top: 10px;">Redeem
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </t>
        </template>


        <template id="web_loaylty_info" inherit_id="website_sale.total" name="Web Loyalty">
            <xpath expr="//div[contains(@t-attf-class, 'o_cart_total')]//table/tr[last()]" position="after">
                <t t-call="sale_pos_ecomm_loyalty.web_loaylty_info_summery_popup"/>
            </xpath>
        </template>

        <template id="loyalty_cart_lines_inherasit" inherit_id="website_sale.cart_lines_quantity" name="Shopping Cart">
            <xpath expr="//div[contains(@t-attf-class, 'css_quantity')]" position="replace">

                <t t-if="line.discount_line">
                    <input type="text" class="js_quantity form-control quantity" t-att-data-line-id="line.id"
                           t-att-data-product-id="line.product_id.id"
                           t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"
                           hidden="true"/>
                </t>
                <t t-else="">
                    <div class="css_quantity input-group mx-auto">
                        <div class="input-group-prepend">
                            <a t-attf-href="#" class="btn btn-link js_add_cart_json d-none d-md-inline-block"
                               aria-label="Remove one" title="Remove one">
                                <i class="fa fa-minus"></i>
                            </a>
                        </div>
                        <input type="text" class="js_quantity form-control quantity" t-att-data-line-id="line.id"
                               t-att-data-product-id="line.product_id.id"
                               t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"/>
                        <div class="input-group-append">
                            <a t-attf-href="#" class="btn btn-link float_left js_add_cart_json d-none d-md-inline-block"
                               aria-label="Add one" title="Add one">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>

        <template id="portal_web_loyalty_transaction" name="Loyalty History" inherit_id="portal.portal_my_home"
                  priority="40">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <div class="o_portal_docs list-group" t-if="website.allow_to_loyalty">
                    <t t-if="loyalty_count" t-call="portal.portal_docs_entry">
                        <t t-set="title">View Loyalty History</t>
                        <t t-set="icon" t-value="'/account/static/src/img/Bill.svg'"/>
                        <t t-set="url" t-value="'/my/loyalty/history'"/>
                        <t t-set="text">View your history of transactions that have accumulated loyalty points.</t>
                        <t t-set="config_card" t-value="True"/>
                    </t>
                </div>
            </xpath>
        </template>

        <template id="portal_loyalty_history" name="My Loyalty History">
            <t t-call="portal.portal_layout">
                <h3>Loyalty History
                </h3>
                <t t-if="not loyalty_pts">
                    <p>There is currently no Loyalty History for your account.</p>
                </t>
                <div t-if="loyalty_pts" class="panel panel-default">
                    <div class="table-responsive">
                        <table class="table table-hover o_portal_my_doc_table">
                            <thead>
                                <tr class="active">
                                    <td>Points Total:
                                        <t t-esc="points_total"/>
                                    </td>
                                </tr>
                                <tr class="active">
                                    <th>Transaction Type</th>
                                    <th>Customer</th>
                                    <th>Sale Order</th>
                                    <th>POS Order</th>
                                    <th>Points</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <t t-foreach="loyalty_pts" t-as="lp">
                                <t t-if='lp.transaction_type == "debit"'>
                                    <tr style='background-color:rgba(255, 0, 24, 0.37);'>
                                        <td>
                                            <span t-field="lp.transaction_type"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.partner_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.order_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.pos_order_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.points"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.state"/>
                                        </td>
                                    </tr>
                                </t>

                                <t t-if='lp.transaction_type == "credit"'>
                                    <tr style='background-color:rgba(0, 128, 0, 0.34);'>
                                        <td>
                                            <span t-field="lp.transaction_type"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.partner_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.order_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.pos_order_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.points"/>
                                        </td>
                                        <td>
                                            <span t-field="lp.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </table>
                    </div>
                    <div t-if="pager" class="o_portal_pager text-center">
                        <t t-call="portal.pager"/>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>
