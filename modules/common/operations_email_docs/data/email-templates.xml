<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="template_sale_order" model="mail.template">
            <field name="name">Sale order: Email Docs</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">{{object.company_id.name}} (Ref {{object.name or 'n/a'}})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 12px;">
                        Hello,
                        <br/><br/>
                        TB Completed
                        is attached.<br/><br/>
                        Thank you.<br/>
                        <t t-if="user and user.signature" t-out="user.signature">
                            Signature
                        </t>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="template_packing_slip" model="mail.template">
            <field name="name">Packing Slip: Email Docs</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">{{object.company_id.name}} (Ref {{object.name or 'n/a'}})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 12px;">
                        Hello,
                        <br/><br/>
                        To DO<br/><br/>
                        Thank you.<br/>
                        <t t-if="user and user.signature" t-out="user.signature">
                            Signature
                        </t>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
