<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_analysis_report_view" model="ir.ui.view">
            <field name="name">Sale Analysis Report</field>
            <field name="model">sale.analysis.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                	<field name="company_id" invisible="1"/>
                	<group>
                        <group>
                            <field name="report_type" />
                        </group>
                        <group>
                            <field name="period_start" />
                            <field name="period_to" />
                        </group>
                	</group>
                    <group>
                        <field name="region" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="sales_rep" widget="many2many_tags"  options="{'no_create': True}"/>
                        <field name="customer" widget="many2many_tags"  options="{'no_create': True}"/>
                        <field name="category" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="group_by_category" colspan="2" />
                    </group>
                    <group colspan="4">
                        <field name="report_name" invisible="1"/>
                        <field name="data" filename="report_name" invisible="1"/>
                    </group>
					<footer>
						<div>
                            <button name="run_report" string="Run Report" type="object" class="oe_highlight" confirm="This will submit a background task to create the sale analysis file."/> or
                            <button special="cancel" string="Cancel" class="oe_link"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_sale_analysis_report_view" model="ir.actions.act_window">
            <field name="name">Sale Analysis Report By Account</field>
            <field name="res_model">sale.analysis.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_analysis_report_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_sale_analysis_report"
                  name="Sale Analysis Report By Account Owner"
                  groups="account.group_account_manager,account.group_account_user"
                  parent="sale.menu_sale_report"
                  action="action_sale_analysis_report_view"/>

</odoo>