<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_large_sale_form" model="ir.ui.view">
            <field name="name">res.config.settings.large.sale</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='quotation_order_setting_container']" position="after">
                    <block title="Large Sale Order" name="auto_background_sale_threshold_section">
                        <setting id="auto_background_sale_threshold_section"
                                 help="Number of sale lines before a sale is automatically processed in the background">
                            <field name="auto_background_sale_threshold" class="o_light_label"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
