<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_opportunity_form" model="ir.ui.view">
        <field name="name">project.opportunity.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        type="object" name="action_view_opportunity" icon="fa-paper-plane"
                        string="Opportunity"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="after">
                <field name="template"/>
            </xpath>
        </field>
    </record>

    <record id="project_project_view_form_simplified_template" model="ir.ui.view">
        <field name="name">project.project.view.form.simplified.template</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <xpath expr="//h1" position="after">
                <group>
                    <field name="project_template_id" domain="[('template', '=', True)]"/>
                    <field name="crm_lead" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="project_template_action" model="ir.actions.act_window">
        <field name="name">Project Templates</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('template', '!=', False)]</field>
    </record>

    <record id="project.open_view_project_all" model="ir.actions.act_window">
        <field name="domain">[('template', '=', False)]</field>
    </record>

    <record id="project.open_view_project_all_group_stage" model="ir.actions.act_window">
        <field name="domain">[('template', '=', False)]</field>
    </record>

    <record id="project.open_view_project_all_config" model="ir.actions.act_window">
        <field name="domain">[('template', '=', False)]</field>
    </record>

    <record id="project.open_view_project_all_config_group_stage" model="ir.actions.act_window">
        <field name="domain">[('template', '=', False)]</field>
    </record>

    <menuitem
            name="Project Templates"
            id="menu_project_templates"
            action="project_template_action"
            parent="project.menu_project_config"
            sequence="13"
    />
</odoo>
