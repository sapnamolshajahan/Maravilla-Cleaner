<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_crm_project_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.crm.project</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//block/setting[field[@name='is_membership_multi']]" position="after">
                <setting id="auto_create_project" help="Creates a new project when an opportunity is generated">
                    <field name="auto_create_project"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
