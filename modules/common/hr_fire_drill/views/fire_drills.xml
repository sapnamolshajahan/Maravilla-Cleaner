<odoo>
    <record id="view_fire_drills_list" model="ir.ui.view">
        <field name="name">fire.drills.list</field>
        <field name="model">fire.drills</field>
        <field name="arch" type="xml">
            <list string="Fire Drills">
                <field name="name" readonly="1"/>
                <field name="date"/>
                <field name="location_id"/>
                <field name="fire_warden_ids" widget="many2many_tags"/>
                <field name="time"/>
                <field name="time_to_assemble_point"/>
            </list>
        </field>
    </record>

    <record id="view_fire_drills_form" model="ir.ui.view">
        <field name="name">fire.drills.form</field>
        <field name="model">fire.drills</field>
        <field name="arch" type="xml">
            <form string="Fire Drill">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="location_id"/>
                        <field name="fire_warden_ids" widget="many2many_tags"/>
                        <field name="time"/>
                        <field name="time_to_assemble_point"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_next_fire_drill_list" model="ir.ui.view">
        <field name="name">next.fire.drill.list</field>
        <field name="model">next.fire.drill</field>
        <field name="arch" type="xml">
            <list string="Next Fire Drill">
                <field name="period_days"/>
                <field name="responsible_id"/>
            </list>
        </field>
    </record>

    <record id="view_next_fire_drill_form" model="ir.ui.view">
        <field name="name">next.fire.drill.form</field>
        <field name="model">next.fire.drill</field>
        <field name="arch" type="xml">
            <form string="Next Fire Drill">
                <sheet>
                    <group>
                        <field name="period_days"/>
                        <field name="responsible_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fire_drills" model="ir.actions.act_window">
        <field name="name">Fire Drills</field>
        <field name="res_model">fire.drills</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_next_fire_drill" model="ir.actions.act_window">
        <field name="name">Next Fire Drill</field>
        <field name="res_model">next.fire.drill</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_fire_drills_root"
              name="Fire Drills"
              parent="hr_hazard.menu_hr_health_and_safety"
              sequence="96"/>

    <menuitem id="menu_fire_drills"
              name="Fire Drills"
              parent="menu_fire_drills_root"
              action="action_fire_drills"/>

    <menuitem id="menu_next_fire_drill"
              name="Next Fire Drill"
              parent="hr_hazard.menu_hr_hazard_reporting_mgt"
              action="action_next_fire_drill"
              sequence="20"/>

</odoo>

