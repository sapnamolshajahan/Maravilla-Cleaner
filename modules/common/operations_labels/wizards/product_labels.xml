<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_labels_form" model="ir.ui.view">
        <field name="name">Product Labels</field>
        <field name="model">operations.labels.product.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="printer" required="True"/>
                    <field name="active_model" invisible="1"/>
                    <field name="label" required="True"
                           options="{'no_create': True, 'no_open': True}"
                           domain="[
                            ('model', '=', active_model),
                            ('state', '=', 'a-active'),
                           ]"/>
                    <field name="barcoded_only"/>
                </group>
                <footer>
                    <button special="cancel" string="Cancel"/>
                    <button string="Print" name="action_print" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!--
        Wizard Security
      -->
    <record id="labels_product_access" model="ir.model.access">
        <field name="name">Product Labels Wizard</field>
        <field name="model_id" ref="model_operations_labels_product_wizard"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
