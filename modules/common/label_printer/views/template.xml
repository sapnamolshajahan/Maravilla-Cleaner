<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="template_tree" model="ir.ui.view">
        <field name="name">Label Templates</field>
        <field name="model">label.printer.template</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="model"/>
                <field name="flavour"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <record id="template_form" model="ir.ui.view">
        <field name="name">Label Template</field>
        <field name="model">label.printer.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <group>
                                <field name="flavour"/>
                                <field name="state" widget="radio"/>
                            </group>
                            <group>
                                <field name="model"/>
                            </group>
                        </group>
                    </div>
                    <hr/>
                    <p>The following objects are available to be used in the label template:</p>
                    <ul>
                        <li><b>obj</b> - a singleton recordset of the declared model</li>
                        <li><b>context</b> - Odoo context</li>
                    </ul>
                    <p>
                        <a href="https://jinja.palletsprojects.com/en/stable/templates" target="_blank">
                            Jinja2 templates and expressions
                        </a> are supported.
                        Printer expressions are enclosed within <tt>{&lt;</tt> and <tt>&gt;}</tt>
                    </p>
                    <field name="flavour_notes"/>
                    <hr/>
                    <field name="content" class="font-monospace"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="template_action" model="ir.actions.act_window">
        <field name="name">Label Templates</field>
        <field name="res_model">label.printer.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_print_label" model="ir.actions.server">
        <field name="name">Print Label</field>
        <field name="model_id" ref="model_label_printer_template"/>
        <field name="state">code</field>
        <field name="code">action = records.action_print_label()</field>
        <field name="binding_model_id" ref="model_label_printer_template"/>
        <field name="binding_view_types">form</field>
    </record>

    <menuitem id="menu_label_templates" parent="remote_print_mqtt.menu_remote_print" action="template_action"/>
</odoo>
