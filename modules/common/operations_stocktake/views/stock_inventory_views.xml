<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_inventory_line_list" model="ir.ui.view">
        <field name="name">stock.inventory.line.list</field>
        <field name="model">stock.inventory.line</field>
        <field name="arch" type="xml">
            <list default_order="location_id,product_id" editable="top" string="Inventory Details"
                  decoration-danger="product_qty != theoretical_qty"
                  decoration-muted="product_qty == theoretical_qty"
                  decoration-bf="is_editable"
                    decoration-warning="moves_done">
                <field name="company_id" column_invisible="1"/>
                <field name="product_tracking" column_invisible="1"/>
                <field name="is_editable" column_invisible="1"/>
                <field name="product_id"/>
                <field name="product_uom_id" />
                <field name="location_id" />
                <field name="product_id" width="1.6"
                       context="{'default_type': 'product'}"
                       options="{'no_create': True}"
                       readonly="is_editable == False or state != 'confirm'"
                        />
                <field name="location_id" groups="stock.group_stock_multi_locations"
                       options="{'no_create': True}"
                       readonly="is_editable == False or state != 'confirm'"
                       />
                <field name="inventory_date" optional="hide" width="0.8"/>
                <field name="prod_lot_id" groups="stock.group_production_lot" width="0.8"
                       readonly="is_editable == False or state != 'confirm' or product_tracking == 'none'"
                       context="{'default_product_id': product_id, 'default_company_id': company_id}" optional="show"/>
                <field name="package_id" groups="stock.group_stock_multi_locations" width="0.8"
                       readonly="is_editable == False or state != 'confirm'"
                       string="Package" optional="show"/>
                <field name="partner_id" groups="stock.group_tracking_owner"
                       readonly="is_editable == False or state != 'confirm'"/>
                <field name="theoretical_qty" string="On Hand" width="0.5"
                       force_save="1" readonly="1" optional="show"/>
                <field name="product_qty" width="0.5" string="Counted" readonly="moves_done == True"/>
                <field name="difference_qty" optional="show" width="0.5"/>
                <field name="product_uom_id" string="UoM" groups="uom.group_uom"
                       width="0.3" force_save="1"/>
                <field name="moves_done"/>
                <field name="inventory_id" column_invisible="1"/>
                <field name="state" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="stock_inventory_line_search" model="ir.ui.view">
        <field name="name">stock.inventory.line.search</field>
        <field name="model">stock.inventory.line</field>
        <field name="arch" type="xml">
            <search string="Search Inventory Lines">
                <field name="product_id"/>
                <field name="location_id" groups="stock.group_stock_multi_locations"/>
                <field name="prod_lot_id" groups="stock.group_production_lot"/>
                <field name="package_id" groups="stock.group_tracking_lot"/>
                <field name="partner_id" groups="stock.group_tracking_owner"/>
                <group>
                   <filter string="Location" name="location" domain="[]" context="{'group_by' : 'location_id'}"/>
                   <filter string="Packaging" name="packaging" domain="[]" context="{'group_by' : 'package_id'}"/>
                   <filter string="Product" name="product" domain="[]" context="{'group_by' : 'product_id'}"/>
                   <filter string="Product Category" name="product_category" domain="[]" context="{'group_by' : 'categ_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_inventory_filter" model="ir.ui.view">
        <field name="name">stock.inventory.filter</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <search string="Search Inventory">
                <field name="name" string="Reference"/>
                <field name="product_ids" string="Product" filter_domain="['|', ('product_ids', 'ilike', self), ('line_ids.product_id','ilike',self)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="confirm" domain="[('state', '=', 'confirm')]"/>
                <filter string="Validated" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Inventory Date" name="inventory_date" date="date"/>
                <group>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Inventory Date" name="inventories_month" domain="[]" context="{'group_by': 'date'}" help="Physical Inventories by Date"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_inventory_list" model="ir.ui.view">
        <field name="name">stock.inventory.list</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <list string="Lot/Serial Number Inventory" sample="1">
                <field name="date"/>
                <field name="name"/>
                <field name="location_ids" widget="many2many_tags" optional="hide" groups="stock.group_stock_multi_locations"/>
                <field name="product_ids" widget="many2many_tags" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state in ('draft', 'confirm')"/>
            </list>
        </field>
    </record>

    <record id="view_stock_inventory_kanban" model="ir.ui.view">
        <field name="name">stock.inventory.kanban</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong>
                                </div>
                                <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'cancel': 'default', 'confirm': 'success', 'done': 'success'}}"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="date" widget="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">stock.inventory.form</field>
        <field name="model">stock.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventory Adjustment">
            <header>
                <button name="action_start" invisible="state !='draft'" string="Start Inventory" type="object"
                        class="oe_highlight" groups="stock.group_stock_user"/>
                <button name="action_open_inventory_lines" invisible="state !='confirm'" string="Continue Inventory"
                        type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                <button name="action_validate" string="Validate Inventory" type="object"
                        invisible="state !='confirm' or line_ids == [] or has_unprocessed_move_lines"
                        class="oe_highlight"
                        confirm="Are you sure?"
                        groups="stock.group_stock_manager"/>

                <button name="action_validate_unprocessed_lines" string="Process Remaining Stocktake" type="object"
                        invisible="not has_unprocessed_move_lines"
                        class="oe_highlight"
                        confirm="Are you sure?"
                        groups="stock.group_stock_manager"/>

                <button name="action_validate_background" string="Validate Inventory (Task)" type="object"
                        invisible="state !='confirm' or line_ids == [] or has_unprocessed_move_lines" class="oe_highlight"
                        confirm="Are you sure?"
                        groups="stock.group_stock_manager"/>
                
                <button name="action_cancel_draft"  string="Set to Draft" type="object"
                        invisible="allow_cancel != True or state != 'cancel'"/>
                <button name="action_cancel_draft" string="Cancel Inventory" type="object"
                        invisible="allow_cancel != True or state != 'confirm'"
                        confirm="If you cancel this inventory adjustment, all its inventory adjustment lines will be lost. Are you sure you want to discard it ?"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,queued,done,cancel"/>
            </header>
            <sheet>
                <field name="line_ids" invisible="1"/>
                <div class="oe_button_box" name="button_box">
                    <button string="Product Moves" type="object"
                            name="action_view_related_move_lines"
                            class="oe_stat_button" icon="fa-exchange"
                            invisible="state != 'done' and not has_unprocessed_move_lines"
                            context="{'no_reference': True}"/>
                    <button name="action_import_stock_counts" string="Import Stock Counts"
                        type="object" icon="fa-cubes"
                            invisible="state != 'confirm'"
                            confirm="This will delete all existing lines and start process again"
                        groups="stock.group_stock_user"/>
				    <button string="Adjustment Lines" type="object"
                            name="action_view_related_count_lines"
                            class="oe_stat_button" icon="fa-exchange"
                            invisible="state != 'done'"/>
                </div>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" placeholder="e.g. Annual inventory"/></h1>
                </div>
                <group>
                    <group>
                        <field name="coverage" widget="radio"/>"
                        <field name="product_ids"
                               context="{'default_type': 'consu'}"
                               options="{'no_create': True}"
                               invisible="coverage == 'warehouses'"
                               required="coverage == 'products'"
                               readonly="state != 'draft'"
                               widget="many2many_tags"/>
                        <field name="category_ids"
                               context="{'default_type': 'category'}"
                               options="{'no_create': True}"
                               invisible="coverage == 'products'"
                               readonly="state != 'draft'"
                               widget="many2many_tags"/>
                         <field name="warehouse_id"
                               options="{'no_create': True}"
                                invisible="coverage == 'products'"
                                readonly="state != 'draft'"
                              required="coverage == 'warehouses' and state == 'draft'"/>
                        <field name="has_unprocessed_move_lines" invisible="1"/>
                        <field name="location_ids_domain" invisible="1"/>
                        <field name="location_ids" options="{'no_create': True}"
                               widget="many2many_tags"
                               force_save="1"
                               required="coverage == True"
                               groups="stock.group_stock_multi_locations"
                               readonly="state != 'draft'"
                               domain="location_ids_domain"/>

                        <field name="exhausted" readonly="state != 'draft'"/>

                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="allow_cancel" invisible="1"/>
                        <field name="include_uncounted_items" string="Include Uncounted Items"
                               readonly="state == 'done'"
                        />
                        <field name="prepopulate_lines" invisible="coverage != 'warehouses'"/>
                        <field name="prefill_counted_quantity" widget="radio"
                                 invisible="state != 'draft'"/>
                        <field name="accounting_date"/>
                    </group>
                </group>
            </sheet>
            <chatter/>
            </form>
        </field>
    </record>

    <record id="action_inventory_form" model="ir.actions.act_window">
        <field name="name">Stocktake</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.inventory</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="view_id" ref="view_inventory_list"/>
        <field name="search_view_id" ref="view_inventory_filter"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_barcode_scanner">
            Want to speed up your inventory counts? Try our Barcode app
          </p><p>
            Barcode scanner can be activated via inventory settings.
            Manual inventory adjustments can also be performed and pre-filled with
            suggested counted quantity.
          </p>
        </field>
    </record>

    <record id="model_stock_inventory_line_action_reset_product_qty" model="ir.actions.server">
        <field name="name">Set counted quantities to 0</field>
        <field name="model_id" ref="model_stock_inventory_line"/>
        <field name="binding_model_id" ref="model_stock_inventory_line"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_reset_product_qty()
        </field>
    </record>

</odoo>
