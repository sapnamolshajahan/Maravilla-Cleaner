<?xml version="1.0"?>
<odoo>
    <record id="view_company_base_inherit_form" model="ir.ui.view">
        <field name="name">General Changes for Company View</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Configuration" name="company_parameters"/>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="operations_timezone"/>
                <field name="account_email_address"/>
            </xpath>
        </field>
    </record>
</odoo>
