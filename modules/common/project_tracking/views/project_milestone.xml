<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_milestone_form" model="ir.ui.view">
        <field name="name">Project Milestone Form</field>
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project.project_milestone_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="std_milestone"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_milestone_pivot" model="ir.ui.view">
        <field name="name">report.project.milestone.pivot</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <pivot string="Milestones" display_quantity="1" sample="1">
                <field name="project_id" type="row"/>
                <field name="std_milestone" type="column"/>
            </pivot>
        </field>
    </record>

    <record id="project_milestone_action" model="ir.actions.act_window">
        <field name="name">Project Milestones</field>
        <field name="res_model">project.milestone</field>
        <field name="view_mode">list,pivot</field>
    </record>

    <menuitem id="project_milestone_menu"
              name="Project Milestones"
              parent="project.menu_project_report"
              action="project_milestone_action"/>
</odoo>
