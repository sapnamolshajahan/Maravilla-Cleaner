<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_account_form" model="ir.ui.view">
        <field name="name">project.account.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        type="object" name="action_view_customer_invoices" icon="fa-dollar"
                        string="Customer Invoices"/>
                <button class="oe_stat_button"
                        type="object" name="action_view_supplier_invoices" icon="fa-dollar"
                        string="Supplier Invoices"/>
            </xpath>
        </field>
    </record>

   </odoo>
