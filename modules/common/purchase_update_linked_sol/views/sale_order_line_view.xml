<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_form" model="ir.ui.view">
        <field name="name">Purchase Details</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='discount']" position="after" >
                <field name="purchase_order" string="Purchase Order" optional="hide" readonly="1" />
            </xpath>
        </field>
    </record>
</odoo>
