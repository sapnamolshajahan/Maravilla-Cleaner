<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <menuitem
                id="menu_hr_health_and_safety"
                name="Health and Safety"
                groups="hr.group_hr_manager,hr.group_hr_user"
                web_icon="hr_hazard,static/description/health_and_safety.png"
                sequence="80"/>

        <menuitem id="menu_hr_health_and_safety_config" parent="hr_hazard.menu_hr_health_and_safety"
                  name="Configuration" sequence="100"/>


        <menuitem id="menu_hr_hazard_reporting_mgt" parent="hr_hazard.menu_hr_health_and_safety_config"
                  name="Hazard Configuration"/>

        <!--
        =================
        Hazard Type
        =================
        -->
        <record id="open_view_hazard_type_form" model="ir.actions.act_window">
            <field name="name">Hazard Type</field>
            <field name="res_model">hr.hazard.type</field>
            <field name="view_mode">list,form</field>
        </record>

        <record model="ir.ui.view" id="view_hazard_type_tree">
            <field name="name">hr.hazard.type.list</field>
            <field name="model">hr.hazard.type</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Hazard Type Tree">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="active"/>
                </list>
            </field>
        </record>
        <record id="view_hazard_type_form" model="ir.ui.view">
            <field name="name">hr.hazard.type.form</field>
            <field name="model">hr.hazard.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Hazard Type">
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hazard_type_view_search" model="ir.ui.view">
            <field name="name">hr.hazard.type.view.search</field>
            <field name="model">hr.hazard.type</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Types">
                    <group col='15' colspan='4'>
                        <field name="active"/>
                        <field name="sequence"/>
                        <field name="name"/>
                    </group>
                </search>
            </field>
        </record>


        <menuitem id="menu_hazard_type" name="Hazard Type"
                  action="open_view_hazard_type_form" parent="menu_hr_hazard_reporting_mgt"/>


        <!--
        ========
        Hazard
        ========
        -->
        <record id="open_hr_hazard_form" model="ir.actions.act_window">
            <field name="name">Hazards</field>
            <field name="res_model">hr.hazard</field>
            <field name="view_mode">list,form</field>
        </record>

        <record model="ir.ui.view" id="view_hazard_tree">
            <field name="name">hr.hazard.tree</field>
            <field name="model">hr.hazard</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Incident Tree">
                    <field name="name"/>
                    <field name="hazard_type_id"/>
                    <field name="hazard_identified"/>
                    <field name="risk_matrix"/>
                    <field name="control_measure"/>
                    <field name="controls"/>
                    <field name="residual_risk_assessment"/>
                    <field name="company_id" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_hazard_form" model="ir.ui.view">
            <field name="name">hr.hazard.form</field>
            <field name="model">hr.hazard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Hazard">
                    <group col="2">
                        <group col="1">
                            <field name="create_date"/>
                            <field name="hazard_type_id"/>
                            <field name="description"/>
                        </group>
                        <group col="1">
                            <field name="name"/>
                            <field name="hazard_identified"/>
                            <field name="go_wrong"/>
                        </group>
                    </group>
                    <separator colspan="4"/>
                    <group col="3">
                        <group col="1">
                            <field name="who_harmed"/>
                            <field name="consequence" required="1"/>
                            <field name="controls"/>
                        </group>
                        <group col="1">
                            <field name="how_harmed"/>
                            <field name="likelihood" required="1"/>
                        </group>
                        <group col="1">
                            <field name="location"/>
                            <field name="risk_matrix"/>
                        </group>
                    </group>
                    <separator colspan="4"/>
                    <group col="2" name="measures">
                        <group col="1">
                            <field name="control_measure"/>
                            <field name="further_action"/>
                            <field name="review_date"/>
                        </group>
                        <group col="1">
                            <field name="recovery_measure"/>
                            <field name="notes"/>
                        </group>
                    </group>
                    <group col="1">
                        <field name="company_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="hazard_view_search" model="ir.ui.view">
            <field name="name">hr.hazard.view.search</field>
            <field name="model">hr.hazard</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group col='15' colspan='4'>
                        <field name="name"/>
                        <field name="hazard_type_id"/>
                        <field name="hazard_identified"/>
                        <field name="description"/>
                    </group>
                </search>
            </field>
        </record>

        <menuitem id="menu_hr_hazard" name="Hazards" parent="menu_hr_health_and_safety"
                  groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
                  sequence="16"/>
        <menuitem id="menu_hr_hazard_hazard" name="Hazards"
                  groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
                  parent="menu_hr_hazard" action="open_hr_hazard_form"/>

    </data>
</odoo>
