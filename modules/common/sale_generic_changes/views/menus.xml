<?xml version="1.0"?>
<odoo>
    <record id="sale.sale_menu_root" model="ir.ui.menu">
        <field name="group_ids" eval="[
        	(5, ),
        	(4, ref('sales_team.group_sale_salesman'))
        ]"/>
    </record>

    <!-- Reorder Quotations and Sales Orders -->
    <menuitem id="sale.menu_sale_order"
              name="Orders"
              action="sale.action_orders"
              parent="sale.sale_order_menu"
              groups="sales_team.group_sale_salesman"
              sequence="1"/>
    <menuitem id="sale.menu_sale_quotations"
              action="sale.action_quotations_with_onboarding"
              parent="sale.sale_order_menu"
              groups="sales_team.group_sale_salesman"
              sequence="2"/>

    <menuitem id="sale.menu_sale_report"
              name="Reporting"
              groups="sales_team.group_sale_manager"
              parent="sale.sale_menu_root"
              sequence="40"/>

    <menuitem id="menu_sale_report_report"
              name="Sales Analysis"
              action="sale.action_order_report_all"
              parent="sale.menu_sale_report"
              groups="sales_team.group_sale_manager"
              sequence="40"/>

    <menuitem id="menu_sale_customers_contacts"
              parent="sale.sale_menu_root"
              name="Customers &amp; Contacts"
              sequence="20"/>


    <record id="sale.action_order_report_all" model="ir.actions.act_window">
        <field name="view_mode">pivot,graph</field>
    </record>

</odoo>
