<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="pricelist_item_tree_view" model="ir.ui.view">
		<field name="name">product.pricelist.item.tree</field>
		<field name="model">product.pricelist.item</field>
		<field name="arch" type="xml">
			<list string="Pricelist Lines" create="false" edit="false" delete="false">
				<field name="pricelist_id"/>
				<field name="name" />
				<field name="product_id" />
				<field name="categ_id"/>
				<field name="date_start" />
				<field name="date_end" />
				<field name="compute_price" string="Compute Price" />
				<field name="price" />
			</list>
		</field>
	</record>

	<record id="pricelist_item_form_view" model="ir.ui.view">
		<field name="name">product.pricelist.item.view</field>
		<field name="model">product.pricelist</field>
		<field name="inherit_id" ref="product.product_pricelist_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='min_quantity']" position="before">
                <field name="categ_id" options="{'no_create':1}"/>
				<field name="percent_price"/>
            </xpath>
		</field>
	</record>

	<record id="pricelist_item_view" model="ir.ui.view">
		<field name="name">pricelist.item.search</field>
		<field name="model">product.pricelist.item</field>
		<field name="type">search</field>
		<field name="arch" type="xml">
			<search string="Pricelist Items">
				<field name="product_id" />
				<field name="name" />
			</search>
		</field>
	</record>

	<record id="action_pricelist_item_window" model="ir.actions.act_window">
		<field name="name">Pricelist Lines</field>
		<field name="res_model">product.pricelist.item</field>
		<field name="view_mode">list</field>
		<field name="view_id" ref="pricelist_item_tree_view"/>
	</record>

	<menuitem id="menu_sale_pricelist_lines"
		action="action_pricelist_item_window"
		parent="sale.menu_sale_report"
		sequence="18"/>
</odoo>
