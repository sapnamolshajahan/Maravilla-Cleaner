<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record model="ir.ui.view" id="view_email_notification_company_form">
            <field name="name">email.notification.company.form.inherit</field>
            <field name="inherit_id" ref="base_generic_changes.view_company_base_inherit_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
            	<xpath expr="//page[@name='company_parameters']" position="inside" >
            		<group string="Email Notification" >
						<field name="task_notification_email_from"/>
						<field name="success_template_id"/>
						<field name="error_template_id"/>
					</group>
            	</xpath>
            </field>
        </record>
    </data>
</odoo>
