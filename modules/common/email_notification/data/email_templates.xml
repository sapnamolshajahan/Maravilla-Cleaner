<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">
		<!--Email template -->
		<record id="email_template_task_queue" model="mail.template">
			<field name="name">Task Queue Template Success</field>
			<field name="email_from">{{object.company_id.task_notification_email_from}}</field>
			<field name="reply_to">{{object.company_id.task_notification_email_from}}</field>
			<field name="subject">{{object.company_id.name}} Task Success Notification (Ref {{object.name or 'n/a' }})</field>
			<field name="partner_to">{{object.user_id.partner_id.id}}</field>
			<field name="model_id" ref="email_notification.model_queue_job"/>
			<field name="auto_delete" eval="True"/>
			<field name="lang">{{object.user_id.partner_id.lang}}</field>
			<field name="body_html" type="html">
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
	<p>Hello <t t-out="object.user_id.partner_id.name">Madam/Sir</t>,</p>
	<p>Your background task <t t-out="object.name">n/a</t> has completed successfully.</p><br />
	<br/>
	<p>Odoo Administrator</p><br/>
</div></field>
		</record>

		<record id="email_template_task_queue_error" model="mail.template">
			<field name="name">Task Queue Template Error</field>
			<field name="email_from">{{object.company_id.task_notification_email_from}}</field>
			<field name="reply_to">{{object.company_id.task_notification_email_from}}</field>
			<field name="subject">{{object.company_id.name}} Task ERROR Notification (Ref {{object.name or 'n/a' }})</field>
			<field name="partner_to">{{object.user_id.partner_id.id}}</field>
			<field name="model_id" ref="email_notification.model_queue_job"/>
			<field name="auto_delete" eval="True"/>
			<field name="lang">{{object.user_id.partner_id.lang}}</field>
			<field name="body_html" type="html">
	<p>Hello <t t-out="object.user_id.partner_id.name">Madam/Sir</t>,</p>
	<p>Your background task <t t-out="object.name">n/a</t> has failed with an error.  The error details are below.<br />
	<p>Task ID: <t t-out="object.uuid"/></p><br/>

	<p><t t-out="object.exc_info">Exception Details</t></p>
	</p><br />
<p>Odoo Administrator</p><br/>
			</field>
		</record>
	</data>
</odoo>
