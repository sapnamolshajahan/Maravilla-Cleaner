<odoo>
    <!-- List View -->
    <record id="view_certificate_type_list" model="ir.ui.view">
        <field name="name">certificate.type.list</field>
        <field name="model">hr.certificate.type</field>
        <field name="arch" type="xml">
            <list string="Certificate Types">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_certificate_type" model="ir.actions.act_window">
        <field name="name">Certificate Types</field>
        <field name="res_model">hr.certificate.type</field>
        <field name="view_mode">list</field>
    </record>

    <!-- Menu Item under Configuration -->
    <menuitem id="menu_certificate_type"
              name="Certificate Types"
              parent="hr_hazard.menu_hr_hazard_reporting_mgt"
              action="action_certificate_type"
              sequence="20"/>
</odoo>
