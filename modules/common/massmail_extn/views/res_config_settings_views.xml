<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_mass_mail_extn_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mass.mailing.extn</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="mass_mailing.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='managa_mail_campaigns_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" name="mail_campaigns_mail_server_setting_container">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Default mail server for email marketing</span>
                        <div class="text-muted">
                            Select a default mail server for email marketing (mass mailing)
                        </div>
                        <div class="text-muted">
                            <field name="marketing_mail_server" options="{'no_create': True, 'no_open': True}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>