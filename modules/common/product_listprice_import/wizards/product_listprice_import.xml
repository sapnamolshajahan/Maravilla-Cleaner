<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_listprice_import_wizard" model="ir.ui.view">
        <field name="name">Product Listprice CSV Import</field>
        <field name="model">product.listprice.import</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info" role="alert">
                    <h5>CSV Format (Comma separated only):</h5>
                    <h5>Product Code | List Price</h5>
                    <br/>
                </div>
                <group>
                    <field name="file"/>
                    <field name="notes"/>
                </group>
                <footer>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                    <button name="button_import" type="object" string="Import" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_listprice_action" model="ir.actions.act_window">
        <field name="name">Import Product Listprices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.listprice.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="product_listprice_import_menu"
              name="Import Product Listprices"
              action="product_listprice_action"
              parent="sale.product_menu_catalog"
              sequence="1000"/>
</odoo>
