<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="view_purchase_line_import_form" model="ir.ui.view">
		<field name="name">purchase.line.import.form.view</field>
		<field name="model">purchase.order.line.import</field>
		<field name="arch" type="xml">
			<form string="Import Purchase Order Lines">
				<group col="1">
                    <p colspan="4">
                        The import File <b>must</b> have a header row with these column names:
						default code, product name, variant name, quantity, price
                    </p>
					<p>Notes:</p>
					<ul>
						<li><i>Variant name</i> values are only required if the product has variants.</li>
						<li><i>Price</i> values are optional; the supplier price will be used as default.</li>
					</ul>
                </group>
				<group>
					<field name="purchase"/>
					<field name="file" invisible="state != 'draft'"/>
                    <field name="state" invisible="1"/>
				</group>
				<footer>
                    <button special="cancel" string="Cancel"/>
                    <button name="button_process_import" invisible="state != 'draft'" type="object"
							string="Import" class="btn-primary"/>
                </footer>
			</form>
		</field>
	</record>

	<record id="import_purchase_order_lines_action" model="ir.actions.server">
		<field name="name">Import Purchase Order Lines</field>
		<field name="model_id" ref="model_purchase_order"/>
		<field name="state">code</field>
		<field name="binding_model_id" ref="model_purchase_order" />
		<field name="code">action=records.action_import_purchase_order_lines()</field>
	</record>
</odoo>
