<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="purchase_order_value_form_view">
        <field name="name">purchase.order.value.form</field>
        <field name="model">purchase.purchase_order_value</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Purchase Order Value">
                <field name="value" />
                <footer>
                    <button special="cancel" string="Cancel" />
                    <button name="button_update_purchase_order_value" type="object" string="Set Value" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_server_purchase_order_value" model="ir.actions.server">
        <field name="name">Set Purchase Order Value</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="state">code</field>
        <field name="binding_model_id" ref="model_purchase_order" />
        <field name="code">action=records.action_set_purchase_order_value()</field>
    </record>
</odoo>
