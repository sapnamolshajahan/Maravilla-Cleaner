<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="open_invoice_view">
        <field name="name">res.partner.open.invoice.wizard.view</field>
        <field name="model">res.partner.open.invoice</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Open Invoice Report">
                <group>
                    <field name="type"/>
                </group>
                <separator string="" colspan="4"/>
                <group colspan="4">
                    <field name="report_name" invisible="1"/>
                    <field name="data" filename="report_name"/>
                </group>
                <footer>
                    <button special="cancel" string="Cancel"/>
                    <button name="button_process" string="Create File" type="object" default_focus="1"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_open_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Open Invoices Report</field>
        <field name="res_model">res.partner.open.invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="open_invoice_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


    <menuitem
            name="Open Invoices"
            action="action_partner_open_invoice_wizard"
            id="menu_res_partner_open_invoice_view"
            parent="account_reports_rec_and_pay_menu"
            sequence="10"/>

</odoo>
