<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="partner_reports" model="ir.ui.view">
        <field name="name">partner.reports.company.config</field>
        <field name="model">res.config.settings</field>
        <field name="type">form</field>
        <field name="priority" eval="1000"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Credit Balance Message for Statements" id="credit_balance_statement">
                    <setting id="credit_balance_setting" string="Credit Balance Message">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="cbs_message" class="col-lg-3 o_light_label"/>
                                <field name="cbs_message"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
