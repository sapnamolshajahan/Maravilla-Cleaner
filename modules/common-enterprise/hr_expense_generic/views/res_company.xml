<?xml version="1.0"?>
<odoo>
    <record id="view_company_base_view_inherit_form" model="ir.ui.view">
        <field name="name">General Company Changes</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_email_address']" position="after">
                <field name="default_payment_mode"/>
            </xpath>
        </field>
    </record>
</odoo>
