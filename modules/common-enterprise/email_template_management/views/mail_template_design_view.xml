<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form views-->
    <record id="mail_template_design_form" model="ir.ui.view">
        <field name="name">Generic Email Design</field>
        <field name="model">mail.template.design</field>
        <field name="arch" type="xml">
            <form string="Generic Email Design">
                <header>
                    <button name="render_templates"
                            type="object"
                            string="Render Templates"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group string="Design name" name="design_name_section">
                        <field name="name" nolabel="1"/>
                    </group>
                    <div class="alert alert-info"
                         role="alert"
                         style="margin-bottom:0px;">
                        Please insert "{text_content}" where text content is supposed to be placed in this HTML.\n
                        Only one "{text_content}" is allowed per one HTML.
                    </div>
                    <group name="design_body" string="Design Body">
                        <field name="body" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Tree Views-->
    <record id="mail_template_design_tree" model="ir.ui.view">
        <field name="name">Generic Email Design</field>
        <field name="model">mail.template.design</field>
        <field name="arch" type="xml">
            <list string="Generic Email Design">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!--Search-->
    <record id="mail_template_design_search_view" model="ir.ui.view">
        <field name="name">Generic Email Design</field>
        <field name="model">mail.template.design</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!--Actions-->
    <record id="mail_template_design_action_window" model="ir.actions.act_window">
        <field name="name">Generic Email Designs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="mail_template_design_tree"/>
        <field name="view_mode">list,form</field>
        <field name="res_model">mail.template.design</field>
    </record>

    <!-- Menu-->
    <menuitem id="menu_mail_template_design_section"
              name="Manage Emails"
              parent="base.menu_administration"/>

    <menuitem name="Generic Email Designs"
              id="mail_template_design_menu"
              action="mail_template_design_action_window"
              parent="menu_mail_template_design_section"
              sequence="1"/>
</odoo>
