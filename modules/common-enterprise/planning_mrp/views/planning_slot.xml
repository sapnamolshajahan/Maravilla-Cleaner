<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="planning_slot_additional_form" model="ir.ui.view">
        <field name="name">planning.slot.additional.form</field>
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='role_id']" position="after">
                <field name="other_users" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>


</odoo>