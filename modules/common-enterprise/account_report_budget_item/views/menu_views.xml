<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_report_budget_item_list" model="ir.ui.view">
        <field name="name">account.report.budget.item.list</field>
        <field name="model">account.report.budget.item</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="budget_id"/>
                <field name="account_id"/>
                <field name="date"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="action_account_report_budget_item" model="ir.actions.act_window">
        <field name="name">Financial Budget Lines</field>
        <field name="res_model">account.report.budget.item</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_account_report_budget_item_list"/>
    </record>

    <menuitem id="menu_financial_budget_lines"
              name="Financial Budget Lines"
              parent="account.account_account_menu"
              action="action_account_report_budget_item"
              sequence="14"/>

</odoo>
