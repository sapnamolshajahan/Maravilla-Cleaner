<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_addin_report_structure_wizard">
            <field name="name">account.addin.report.structure.wizard</field>
            <field name="model">addin.report.structure</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Account Group Structure Reporting">
                    <group>
                        <field name="account_group_id" required="1"/>
                    </group>
                    <separator string="" colspan="4"/>
                    <group colspan="4">
                        <field name="report_name" invisible="1"/>
                        <field name="data" filename="report_name"/>
                    </group>
                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button name="button_process" string="Create Report" type="object" default_focus="1"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_addin_report_structure_wizard" model="ir.actions.act_window">
            <field name="name">Account Group Structure Report</field>
            <field name="res_model">addin.report.structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_addin_report_structure_wizard"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem
                name="Group Structure Report"
                action="action_account_addin_report_structure_wizard"
                id="menu_account_addin_report_structure"
                parent="menu_addin_financial_reports_config_menu"
                sequence="100"/>


    </data>
</odoo>