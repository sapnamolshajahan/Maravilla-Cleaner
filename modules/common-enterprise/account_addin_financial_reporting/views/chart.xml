<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form-->
    <record id="view_addin_chart_form" model="ir.ui.view">
        <field name="name">Addin Chart Form</field>
        <field name="model">addin.report.chart</field>
        <field name="arch" type="xml">
            <form string="Chart">
                <sheet>
                    <group string="Chart Set Up">
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="account_group_id" options="{'no_create': True}"
                                   domain="[('parent_id','=', False)]"/>
                        </group>
                        <group>
                            <field name="include_account_code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chart Pages">
                            <field name="page_ids" nolabel="1" >
                                <list editable="bottom">
                                    <field name="page_sequence"/>
                                    <field name="name"/>
                                    <field name="analytic_account" widget="many2many_tags"
                                           options="{'no_create': True}"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids"/>
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_account_addin_financial_report_chart_list" model="ir.ui.view">
        <field name="name">addin.chart.list</field>
        <field name="model">addin.report.chart</field>
        <field name="arch" type="xml">
            <list string="Charts">
                <field name="name"/>
                <field name="type"/>
                <field name="company_id" options="{'no_create': True}"/>
                <field name="account_group_id" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <!--Search-->
    <record id="view_account_addin_financial_report_chart_search_view" model="ir.ui.view">
        <field name="name">addin.report.chart.search</field>
        <field name="model">addin.report.chart</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <!--Action-->
    <record id="action_addin_report_chart" model="ir.actions.act_window">
        <field name="name">Chart</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">addin.report.chart</field>
        <field name="view_id" ref="view_account_addin_financial_report_chart_list"/>
        <field name="view_mode">list,form</field>
    </record>

    <!--Form-->
    <record id="view_addin_chart_page_form" model="ir.ui.view">
        <field name="name">addin.chart.page.form</field>
        <field name="model">addin.report.chart.page</field>
        <field name="arch" type="xml">
            <form string="Chart Page">
                <sheet>
                    <group string="Chart Page Set Up">
                        <group>
                            <field name="name"/>
                            <field name="page_sequence"/>
                            <field name="chart_id" options="{'no_create': True}"/>
                            <field name="analytic_account" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_addin_chart_page_list" model="ir.ui.view">
        <field name="name">addin.chart.page.list</field>
        <field name="model">addin.report.chart.page</field>
        <field name="arch" type="xml">
            <list string="Chart Pages">
                <field name="name"/>
                <field name="page_sequence"/>
                <field name="chart_id"/>
                <field name="analytic_account" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <!--Search-->
    <record id="view_account_addin_financial_report_chart_group_search_view" model="ir.ui.view">
        <field name="name">addin.chart.page.search</field>
        <field name="model">addin.report.chart.page</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="chart_id"/>
            </search>
        </field>
    </record>

    <!--Action-->
    <record id="action_account_addin_financial_report_chart_group_window" model="ir.actions.act_window">
        <field name="name">Chart Pages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">addin.report.chart.page</field>
        <field name="view_id" ref="view_addin_chart_page_list"/>
        <field name="view_mode">list,form</field>
    </record>


    <!--Form-->
    <record id="view_account_group_form" model="ir.ui.view">
        <field name="name">addin.report.account.structure.form</field>
        <field name="model">addin.report.account.group</field>
        <field name="arch" type="xml">
            <form string="Chart account">
                <sheet>
                    <group string="Chart Account Set Up">
                        <group>
                            <field name="name"/>
                            <field name="footer_name"/>
                            <field name="report_name"/>
                            <field name="parent_id"/>
                            <field name="child_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="account_tag_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="account_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="opening_balance"/>
                        </group>
                        <group>
                            <field name="heading"/>
                            <field name="lines_before"/>
                            <field name="subtotal"/>
                            <field name="lines_after"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="signage"/>
                            <field name="print_accounts"/>
                            <field name="overrride_styling"/>
                        </group>
                        <group string='For Cashflow reports only'>
                            <field name="debit_only"/>
                            <field name="credit_only"/>
                        </group>
                        <group string='For Ratio lines only'>
                            <field name="ratio"/>
                            <field name="numerator_group"/>
                            <field name="denomintor_group"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids"/>
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="addin_account_group_list" model="ir.ui.view">
        <field name="name">addin.report.account.group.list</field>
        <field name="model">addin.report.account.group</field>
        <field name="arch" type="xml">
            <list string="Chart account structure">
                <field name="name"/>
                <field name="report_name"/>
                <field name="footer_name"/>
                <field name="parent_id"/>
                <field name="child_ids" widget="many2many_tags"/>
                <field name="sequence"/>
            </list>
        </field>
    </record>

    <!--Search-->
    <record id="view_account_addin_financial_report_chart_account_search_view" model="ir.ui.view">
        <field name="name">addin.report.account.group.search</field>
        <field name="model">addin.report.account.group</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="parent_id"/>
            </search>
        </field>
    </record>

    <!--Action-->
    <record id="action_addin_report_account_group" model="ir.actions.act_window">
        <field name="name">Account Structure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">addin.report.account.group</field>
        <field name="view_id" ref="addin_account_group_list"/>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_addin_report_name_list" model="ir.ui.view">
        <field name="name">addin.report.name.list</field>
        <field name="model">addin.report.name</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="action_addin_report_name" model="ir.actions.act_window">
        <field name="name">Addin Report Name</field>
        <field name="res_model">addin.report.name</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_addin_report_name_list"/>
    </record>

    <menuitem id="menu_addin_report_chart"
              action="action_addin_report_chart"
              parent="menu_addin_financial_reports_config_menu"
              groups="account.group_account_manager"
              sequence="20"/>

    <menuitem id="menu_addin_report_account_group"
              action="action_addin_report_account_group"
              parent="menu_addin_financial_reports_config_menu"
              groups="account.group_account_manager"
              sequence="40"/>

    <menuitem id="menu_addin_report_name"
              action="action_addin_report_name"
              parent="menu_addin_financial_reports_config_menu"
              groups="account.group_account_manager"
              sequence="50"/>

</odoo>