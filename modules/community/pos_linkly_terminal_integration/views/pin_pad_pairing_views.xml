<odoo>
    <record id="view_pin_pad_pairing_wizard" model="ir.ui.view">
        <field name="name">Pin Pad Pairing Wizard</field>
        <field name="model">pin.pad.pairing</field>
        <field name="arch" type="xml">
            <form string="Pin Validation">
                <group colspan="2">
                    <group>
                        <field name="username" required="1"/>
                        <field name="password" password="True" required="1"/>
                    </group>
                    <group>
                        <field name="pairCode" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_request" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record> 

    <record id="pin_pad_pairing_action_window" model="ir.actions.act_window">
        <field name="name">Pin Pad Pairing</field>
        <field name="res_model">pin.pad.pairing</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>