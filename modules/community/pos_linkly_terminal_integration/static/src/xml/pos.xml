<templates id="template" xml:space="preserve">
    <t t-name="pos_linkly_terminal_integration.PaymentScreenPaymentLines" t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('paymentline')]" position="inside">
            <t t-if="line.payment_status and line.payment_status == 'done'">
                <t t-if="line.payment_method_id and line.payment_method_id.use_payment_terminal == 'linkly'">
                    <div class="d-flex justify-content-end">
                        <i class="fa fa-print cursor-pointer" aria-hidden="true" style="padding: 10px 10px 10px 10px;
                            border: 1px solid gray;background: gray;color: white;"  t-on-click="()=>this.clickWkLinklyReprint(line)"></i>
                    </div>
                </t>
            </t>
        </xpath>
    </t> 
    <t t-name="pos_linkly_terminal_integration.PaymentScreenBack" t-inherit="point_of_sale.PaymentScreenBack" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('button back')]" position="replace">
            <button class="button back back-button validation btn btn-light btn-lg w-50 py-3 lh-lg "
                t-on-click="() => this.clickBackPaymentPage()">
                <span class="back_text">Back</span>
            </button>
        </xpath>    
    </t>
</templates>
